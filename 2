        f'{"<div class=\"error-details\">" + test["error"] + "</div>" if test["error"] and test["status"] == "failed" else ""}'
        f'{"<div class=\"skip-details\">" + test["error"] + "</div>" if test["error"] and test["status"] == "skipped" else ""}'
